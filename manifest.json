{
  "manifest_version": 3,
  "name": "GPT Prompt Optimizer",
  "version": "1.0",
  "description": "Optimize your GPT prompt before sending",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://api.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://claude.ai/*"
      ],
      "js": ["content.js"],
      "css": ["modal-styles.css", "notifications.css"],
      "run_at": "document_idle",
      "type": "module"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dom-manager.js",
        "api-service.js",
        "optimize-button.js",
        "button-styles.js",
        "notification-manager.js",
        "notifications.css",
        "prompt.md",
        "templates/modal-template.html",
        "modal-styles.css",
        "api-providers.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "options_page": "settings.html"
}